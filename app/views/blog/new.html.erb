<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto" style="margin: 30px 0px">
      <%= form_with scope: :blog, local: true  do |f| %>
          <div class="form-group">
            <label style="font-weight: bold">Blog title</label>
            <%= f.text_field :title, class: "form-control", placeholder: "Title of your blog..."  %>
          </div>
          <div class="form-group">
            <label style="font-weight: bold">Blog tags</label>
            <%= f.text_field :tag, class: "form-control", placeholder: "Blog tags, you can use  multitag. Exp: 'Animal#Dog'" %>
          </div>
          <div class="form-group">
            <label style="font-weight: bold">Blog content</label>
            <%= f.text_area :content, size: "30x10", class: "form-control", placeholder: "content of your blog..." %>
          </div>
            <button type="submit" class="btn btn-primary">Post</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
