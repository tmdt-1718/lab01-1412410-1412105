<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto" style="margin: 30px 0px">
      <h2>Edit my blog</h2>
      <%= form_with scope: :edit_blog, local: true  do |f| %>
          <div class="form-group">
            <label style="font-weight: bold">Blog title</label>
            <%= f.text_field :title, class: "form-control", value: @blogs.title  %>
          </div>
          <div class="form-group">
            <label style="font-weight: bold">Blog tags</label>
            <% @tag = '' %>
            <% @btags.each do |btag| %>
              <% if btag.blog_id == @blogs.blog_id %>
                 <% @tag += '#' + Tag.find_by_tag_id(btag.tag_id).tag_name %>
              <% end %>
            <% end %>
            <%= f.text_field :tag, class: "form-control", value: @tag %>
          </div>
          <div class="form-group">
            <label style="font-weight: bold">Blog content</label>
            <%= f.text_area :content, size: "30x10", class: "form-control", value: @blogs.content %>
          </div>
            <button type="submit" class="btn btn-secondary">Update</button>
          <% end %>
      </div>
  </div>
</div>
