<h1>BLOG PAGE</h1>
</br></br></br></br>
<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<% @blogs.each do |blog| %>
			<div class="card">
			  <div class="card-body">
			  	<img  src="tom_pic.jpg" alt="Tom and Jerry" width="60%">
			    <h4 class="card-title"><%= blog.title %></h4>
			    <h6 class="card-subtitle mb-2 text-muted">by <%= blog.author %></h6>
			    <p class="card-text"><%= blog.content %></p>
			    <p class="card-text">Number of View: <%= blog.view %></p>
			    <!-- <a href="<%= blog_path(blog.id)%>" class="card-link">Read more</a> -->
			    <%= link_to blog_path(blog.id), class: "card-link" do %>
			    Read more
			    <% end %>
			  </div>
			</div>
			</br></br>
			<% end %>
		</div>
	</div>
	</br></br></br></br>
</div>
