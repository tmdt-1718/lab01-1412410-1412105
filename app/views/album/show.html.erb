<div class="container">
	<div class="row">
		<% @photos.each do |photo| %>
			<div class="card" style="width: 20rem;">
			  <img class="card-img-top" src="<%=Faker::Avatar.image%>" alt="photo">
			  <div class="card-body">
			    <h6 class="card-subtitle mb-2 text-muted">by <%= photo.album.user.user_name%></h6>
			    <p class="card-text">Number of view: <%= photo.view %></p>
					<% photo.view = photo.view + 1 %>
			  </div>
			</div>
		<% end %>
	</div>
</div>
