<div class="container">
	<h1 style="margin-bottom: 20px">ALBUMS PAGE</h1>
	<div class="row">
			<% @albums.each do |album| %>
			<div class="card" style="width: 20rem;">
				  <img class="card-img-top" src="<%= album.cover %>" alt="cover">
				  <div class="card-body">
				    <h4 class="card-title"><%= album.album_name %></h4>
				    <h6 class="card-subtitle mb-2 text-muted">by <%= album.user.user_name%></h6>
				<%= link_to album_path(album.id), class: "card-link" do %>
			    View album
			    <% end %>
				  </div>
				</div>
			<% end %>
	</div>
</br></br>
</div>
