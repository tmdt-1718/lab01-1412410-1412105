<!DOCTYPE html>
<html>
  <head>
    <title>Webapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="header-content col-md-12" style="margin-bottom: 10px">
          <nav class="navbar navbar-expand-md navbar-light navbar-sticky-top" style="background-color: #C0C0C0;">
        		<a href="/" class="navbar-brand">
        			RAILS
        		</a>
        		<div class="collapse navbar-collapse" id="navbar-collapse-content">
        			<ul class="navbar-nav">
      	  			<li class="nav-item"><a href="/" class="nav-link">Home</a></li>
      	  			<li class="nav-item"><a href="/album" class="nav-link">Albums</a></li>
                <li class="nav-item"><a href="/blog" class="nav-link">Blogs</a></li>
      	  			<li class="nav-item"><a href="/about" class="nav-link">About</a></li>
      	  		</ul>
              <ul class="navbar-nav ml-auto">
                <% if session[:current_user] %>
                    <div class="dropdown show">
                      <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <%= session[:current_user]["user_name"]%>
                      </a>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">Profile</a>
                        <%= link_to "Log out", logout_path, method: :delete, class: "dropdown-item"%>
                      </div>
                    </div>
                <% else %>
                  <li class="nav-item">
                    <a href="\sessions/login" class="nav-link">
                      <button type="button" class="btn btn-outline-success">Login</button>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="\users/register" class="nav-link">
                      <button type="button" class="btn btn-outline-info">Registry</button>
                    </a>
                  </li>
                <% end %>
              </ul>
        		</div>
        		<button class="navbar-toggler btn-primary" data-toggle="collapse" data-target="#navbar-collapse-content">
        			<span class="navbar-toggler-icon"></span>
        		</button>
        </div>
      </div>
      <div class="row">
        <div class="content col-md-12">
          <div class="left-menu col-md-3">
            <div id="mySidenav" class="sidenav">
              <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
              <a href="/">Home</a>
              <a href="/album">Albums</a>
              <a href="/blog">Blogs</a>
              <a href="/about">About</a>
            </div>
            <div id="main">
              <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
            </div>
          </div>
          <div class="middle-content col-md-12 mx-auto">
              <%= yield %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="footer-content col-md-12" style="background-color: #C0C0C0; color:#098774; margin: 30px 15px 0px 15px; flex: 0px">
          <h5>Create by 1412105 -1412410</h5>
          <h6>VNU-HCM of Siences</h6>
          <nav class="nav" style="background-color: #C0C0C0; color: #6892e3; float: right">
            <a class="nav-item nav-link" href="/">Home</a>
            <a class="nav-item nav-link" href="/about">About</a>
          </nav>
        </div>
      </div>
    </div>

    <script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
        document.getElementById("main").style.width = "0px";
    }
    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
        document.getElementById("main").style.marginLeft= "0";
    }
     </script>
  </body>
</html>
