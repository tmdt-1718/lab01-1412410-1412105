<!DOCTYPE html>
<html>
  <head>
    <title>Webapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="header-content col-md-12">
          <nav class="navbar navbar-expand-md navbar-light" style="background-color: #C0C0C0;">
        		<a href="/" class="navbar-brand">
        			RAILS
        		</a>
        		<div class="collapse navbar-collapse" id="navbar-collapse-content">
        			<ul class="navbar-nav">
      	  			<li class="nav-item"><a href="/" class="nav-link">Home</a></li>
      	  			<li class="nav-item"><a href="/album" class="nav-link">Album</a></li>
      	  			<li class="nav-item"><a href="/about" class="nav-link">About</a></li>
      	  			<li class="nav-item"><a href="/blog" class="nav-link">Blog</a></li>
      	  		</ul>
              <ul class="navbar-nav ml-auto">
                <% if session[:current_user] %>
                    <div class="dropdown show">
                      <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <%= session[:current_user]["user_name"]%>
                      </a>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">Profile</a>
                        <%= link_to "Log out", logout_path, method: :delete, class: "dropdown-item"%>
                      </div>
                    </div>
                <% else %>
                  <li class="nav-item">
                    <a href="\sessions/login" class="nav-link">
                      <button type="button" class="btn btn-outline-success">Login</button>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="\users/register" class="nav-link">
                      <button type="button" class="btn btn-outline-info">Registry</button>
                    </a>
                  </li>
                <% end %>
              </ul>
        		</div>
        		<button class="navbar-toggler btn-primary" data-toggle="collapse" data-target="#navbar-collapse-content">
        			<span class="navbar-toggler-icon"></span>
        		</button>
        	</nav>
        </div>
        <div class="content col-md-12">
            <%= yield %>
        </div>
        <div class="footer col-md-12" style="margin-top: 20px">
          <nav class="navbar" style="background-color: #C0C0C0; color:#ff0";">@CREATED BY 1412410_1412105
            <nav class="nav navbar-nav pull-xs-left">
                    <a class="nav-item nav-link" href="/">Home</a>
                    <a class="nav-item nav-link" href="#">About</a>
                    <a class="nav-item nav-link" href="#">Help</a>
                </nav>
              </nav>
        </div>
      </div>
    </div>
  </body>
</html>
